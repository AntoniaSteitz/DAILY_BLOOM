<div class="content-wrap m-3">

  <div class="index-card-container">
    <% @posts.each do |post| %>
      <div class="posts_cards">
        <%= link_to post_path(post) do %>
            <% if ! post.photo.key.nil? %>
              <%= cl_image_tag(post.photo.key, class:"card-photo", crop: :thumb, gravity: :face) %>
            <% elsif ! post.text.nil? %>
              <div class="card-quote">
                <%= post.text %>
              </div>
            <% elsif ! post.poem.nil? %>
              <div class="card-poem">
                <%= post.poem %>
              </div>
            <% elsif !post.song_url.nil? %>
              <div class="card-song">
                <% spotify_track_id = extract_spotify_track_id(post.song_url) %>
                <% if spotify_track_id.present? %>
                  <iframe src="https://open.spotify.com/embed/track/<%= spotify_track_id %>?utm_source=generator" width="90%" height="200" frameborder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
                <% end %>
              </div>
            <% end %>
          <% end %>
      </div>
    <% end %>
  </div>
</div>


